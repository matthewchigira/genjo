<% provide :title, "New Diary" %>
<h1> Create a new diary entry</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @diary do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :date %>
      <%= f.date_field :date, value: Date.today, class: "form-control" %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :entry, "Diary Entry" %>
      <%= f.text_area :entry, size: '50x10', placeholder: "Enter your diary here..." , class: "form-control" %>

      <%= f.submit "Create diary", class: "btn btn-primary" %>

    <% end %>
    
  </div>  
</div>
