<header class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <span class="navbar-toggle" data-toggle="collapse" data-target="#main-navbar">
        <span class="icon-bar"></span> 
        <span class="icon-bar"></span> 
        <span class="icon-bar"></span> 
      </span>
      <%= link_to "Genjo!", root_path, class: "navbar-brand" %>
    </div>
    <nav class="collapse navbar-collapse" id="main-navbar"> 
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %> 
          <li>
            <%= link_to diaries_path do %>
              <span class="glyphicon glyphicon-pencil" aria-label="Diary">
              </span>
              <span>Diary</span>
            <% end %>
          </li>
          <li>
            <%= link_to targets_path do %>
              <span class="glyphicon glyphicon-stats" aria-label="Targets">
              </span>
              <span>Targets</span>
            <% end %>
          </li>
          <li>
            <%= link_to tasks_path do %>
              <span class="glyphicon glyphicon-list-alt" aria-label="Tasks">
              </span>
              <span>Tasks</span> 
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-menu-hamburger" 
              aria-label="Menu"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user do %>
                  <span class="glyphicon glyphicon-user" aria-label="Profile">
                  </span>
                  <span>Profile</span>
                <% end %> 
              </li>
              <li>
                <%= link_to edit_user_path(current_user) do %>
                  <span class="glyphicon glyphicon-cog" aria-label="Settings">
                  </span>
                  <span>Settings</span>
                <% end %>
              </li> 
              <li class="divider"></li> 
              <li>
                <%= link_to logout_path, method: :delete do %>
                  <span class="glyphicon glyphicon-log-out" aria-label="Log out">
                  </span>
                  <span>Log out</span>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>  
          <li>
            <%= link_to login_path do %>
              <span class="glyphicon glyphicon-log-in" aria-label="Log in">
              </span>
              <span>Log in</span>
            <% end %>
          </li>
          
        <% end %>
      </ul>
    </nav>
  </div>
</header>
