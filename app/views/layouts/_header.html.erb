<header class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Genjo!", root_path, class: "navbar-brand" %> 
    </div>
    <nav> 
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %> 
          <li>
            <%= link_to diaries_path do %>
              <span class="glyphicon glyphicon-pencil" aria-label="Diary">
              </span>
              <span class="hidden-xs">Diary</span>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <span class="glyphicon glyphicon-stats" aria-label="Targets">
              </span>
              <span class="hidden-xs">Targets</span>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <span class="glyphicon glyphicon-list-alt" aria-label="Tasks">
              </span>
              <span class="hidden-xs">Tasks</span> 
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-menu-hamburger" 
              aria-label="Menu"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", "#" %></li> 
              <li class="divider"></li> 
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>  
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
